<div class="chat-item">
    <div class="chat-item__avatar"></div>
    <div class="chat-item__content ">
        <div class="chat-item__name">{{name}}</div>
        <div class="chat-item__message">{{text}}</div>
    </div>
    <div class="chat-item__info ">
        <time class="chat-item__time">{{time}}</time>
        <span class="chat-item__count">
                {{count_mess}}
        </span>
    </div>
</div>
